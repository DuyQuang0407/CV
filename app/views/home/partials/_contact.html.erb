<div class="contant-section px-3 px-lg-4 pb-4" id="contact">
  <h2 class="h3 text mb-3">Contact</h2>
  <div class="row">
    <div class="col-md-7 d-print-none">
      <div class="my-2">
        <%= form_for :contact, url: contact_path do |f|%>
          <div class="my-2">
            <%= f.text_field :subject, class:"form-control", placeholder:"Your Subject" %>
          </div>
          <div class="row">
            <div class="col-4">
              <%= f.text_field :name, class:"form-control", placeholder:"Your Name" %>
            </div> 
            <div class="col-4">
              <%= f.text_field :email, class:"form-control", placeholder:"Your E-mail" %>
            </div>
            <div class="col-4">
              <%= f.text_field :phone, class:"form-control", placeholder:"Your Phone" %>
            </div> 
          </div>
          <div class="form-group my-2">
            <%= f.text_area :message, class:"form-control", id:"message", style:"resize: none", rows:"4", placeholder:"Your Message" %>
          </div>
          <%= f.submit 'Send', class:"btn btn-primary mt-2"%>  
        <% end %>
